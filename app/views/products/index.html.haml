%h1 Listing products

%table
  %tr
    %th Name
    %th Description
    %th Price
    %th Product category

  - @products.each do |product|
    %tr
      %td= h product.name
      %td= h product.description 
      %td= h product.price 
      %td= link_to product.product_category, product.product_category if product.product_category
      %td= link_to 'Show', product 
      %td= link_to 'Edit', edit_admin_product_path(product) 
      %td= link_to 'Destroy', [:admin, product], :confirm => 'Are you sure?', :method => :delete 

%br

= link_to 'New product', new_admin_product_path

