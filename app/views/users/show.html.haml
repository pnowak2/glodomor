%div.box
  %div{:style=>'float: right;'}
    = link_to image_tag (@user.avatar.url(:medium)), @user.avatar.url
  %p
    %b Name:
    =h "#{@user.first_name} #{@user.last_name}"
  %p
    %b Phone:
    =h @user.phone
  %p
    %b Email:
    =h @user.email 
  %p
    %b Role:
    =h @user.role
  %p
    %b Login count:
    =h @user.login_count 
     
  %p
    %b Last request at:
    =h @user.last_request_at

  %p
    %b Last login at:
    =h @user.last_login_at

  %p
    %b Current login at:
    =h @user.current_login_at

  %p
    %b Last login ip:
    =h @user.last_login_ip

  %p
    %b Current login ip:
    =h @user.current_login_ip
   
  = link_to 'Edit', edit_user_path(@user)
- content_for :subheader do
  %b Profile
  %br
  This page allows You to see user details
