!!!
%html{ :xmlns => "http://www.w3.org/1999/xhtml", :lang => "en", 'xml:lang' => "en" }
  %head
    %title Foo
    %meta{ 'http-equiv' => 'Content-Type', :content => 'text/html; charset=utf-8' }/
    = javascript_include_tag 'jquery-1.3.2.min', 'application', :cache => true
    = yield :javascript
    = stylesheet_link_tag 'styles'
  %body

    =flash[:notice]

    %br
    =link_to "Store", store_path
    - if(current_user && current_user.is_admin?)
      |
      =link_to "Products", products_path 
      |
      =link_to "Product categories", product_categories_path
    |
    =link_to "Your cart (#{@cart.total_quantity})", :controller => 'store', :action => 'checkout_confirm'
    |
    - if(!current_user)
      =link_to "Register", new_user_path
      |
      =link_to "Login", login_path
      -else
      =link_to "Users", users_path if current_user.is_admin?
      |
      =link_to "My orders", my_orders_path
      =link_to "Orders", orders_path if current_user.is_admin?
      |
      Logged as 
      =link_to "#{current_user.first_name} #{current_user.last_name}", current_user
      |
      =link_to "Logout", logout_path 
      =image_tag current_user.avatar.url(:thumb)

    =yield
    =render :partial => 'cart/cart', :object => @cart unless @cart.is_empty?

