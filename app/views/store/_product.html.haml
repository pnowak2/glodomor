%div.product_picture
  =link_to (image_tag(product.picture(:thumb)), product)
%dl
  %dt= link_to("#{product.name}", product)
  %dd.price= number_to_currency(product.price)
  - unless(product.description.blank?)
    %dd.ingredients= product.description
  %dd.comments 
    ="Comments: #{product.comments.size}"
    =link_to "(Add comment)", product_path(product) + "#comments"
    - if product.inventory?
      |
      ="Items count: #{product.inventory}"
    
%div.clearfix
