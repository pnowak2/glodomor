%div.box
  %div.menu
    - @product_categories.each do |c|
      %h2= c.name
      - c.products.published.each do |p|
    
        %div{:style=>'float:left; padding-right: 5px; padding-bottom: 5px;'} 
          =link_to (image_tag(p.photo.url(:thumb)), p)
        %dl
          %dt= link_to(p.name, p)
          %dd.price= number_to_currency(p.price)
          %dd.ingredients= p.description
          %dd.comments 
            = image_tag '../images/speech-bubble-micro-icon.png', :class=>'comments_icon' 
            =link_to "Comments (0)"
            |
            = image_tag '../images/document-lines-micro-icon.png', :class=>'add_to_cart_icon'
            =link_to "Add to cart", {:controller => 'store', :action => 'add_to_cart', :id => p.id}, :method => :post
        %div.clearfix

  %h2 New products:

  %ul
    - Product.recent.published.each do |p|
      %li
        =link_to p.name, product_path(p)
        =image_tag p.photo.url(:thumb)

  %h2 Last registered items:

  %ul
    - LineItem.recent.each do |li|
      %li= link_to li.name, product_path(li.product_id)

  %h2 Last registered users:

  %ul
    - User.recent.each do |u|
      %li
        =link_to "#{u.first_name} #{u.last_name} (#{u.email})", user_path(u)
        =image_tag u.avatar.url(:thumb)

  %h2 Users recently logged in:

  %ul
    - User.recently_logged.each do |u|
      %li
        =link_to "#{u.first_name} #{u.last_name} (#{u.email})", user_path(u)
        =image_tag u.avatar.url(:thumb)
        
  =image_tag('/images/muppet chef.jpg')

- content_for :subheader do
  %b Store
  %br
  This page allows you to buy items
